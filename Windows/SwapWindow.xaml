<Window x:Class="redfish.SwapWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:redfish"
		xmlns:controls="clr-namespace:redfish.Controls"
		mc:Ignorable="d"
		SizeToContent="WidthAndHeight"
		Style="{StaticResource TransparentWindow}">

    <Grid Margin="10,8">
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="{StaticResource TitleColor}"/>
                <Setter Property="Opacity" Value="0.9"/>
                <Setter Property="FontFamily" Value="{StaticResource Kantumruy}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="-6,-6"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="IsHitTestVisible" Value="False"/>
            </Style>
            <Style TargetType="controls:Checkbox">
                <Setter Property="Width" Value="20"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="Margin" Value="0,4"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
            <Style TargetType="controls:Switch">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="Margin" Value="0,4"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{StaticResource LightBackColor}"/>
                <Setter Property="CornerRadius" Value="12"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="MinWidth" Value="40"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,0,-1,0"/>
                <Setter Property="CaretBrush" Value="White"/>
                <Setter Property="HorizontalContentAlignment" Value="Right"/>
                <Setter Property="FontFamily" Value="{StaticResource Kantumruy}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
            <Style TargetType="controls:Button">
                <Setter Property="Background" Value="{StaticResource InactiveColor}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="MaxWidth" Value="115"/>
                <Setter Property="CornerRadius" Value="7"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Height" Value="22"/>
            </Style>
        </Grid.Resources>

        <!-- TOP CONTROLS -->
        <Grid x:Name="WindowControls" Height="34" VerticalAlignment="Top">
            <controls:WindowControlButton Click="ExitButtonClick" Margin="0,0,8,0"
										  HorizontalAlignment="Right" VerticalAlignment="Center"
										  PathData="{StaticResource CloseIcon}"
										  Scale="0.95" MaxScale="1.0" Height="22" Width="22"
										  FillColor="{StaticResource InactiveColor}" GlowColor="#d93732"/>

            <StackPanel x:Name="UserInfo" Orientation="Horizontal" HorizontalAlignment="Left" Width="220">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                        <Setter Property="FontFamily" Value="{StaticResource SmallTitleFont}"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>


                <!--<Label x:Name="User_Nickname" Content="f1Lthz4"/>
                <Label Content=":"/>-->
                <Label Content="Swaps"/>
            </StackPanel>
        </Grid>

        <Border Width="290" Height="400" Margin="0,35,0,18">
            <ScrollViewer Margin="10">
                <StackPanel Orientation="Vertical" Margin="0">

                    <!-- Profile Switcher Section -->
                    <Grid Margin="0,3,0,3" Height="35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Label column -->
                            <ColumnDefinition Width="*"/>
                            <!-- Buttons column -->
                        </Grid.ColumnDefinitions>

                        <!-- Left-aligned label -->
                        <Label Content="Profile" VerticalAlignment="Center" />

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <controls:Button x:Name="Profile1Button" Text="1" Click="Profile1Button_Click" Margin="2,0"/>
                            <controls:Button x:Name="Profile2Button" Text="2" Click="Profile2Button_Click" Margin="2,0"/>
                            <controls:Button x:Name="Profile3Button" Text="3" Click="Profile3Button_Click" Margin="2,0"/>
                            <controls:Button x:Name="Profile4Button" Text="4" Click="Profile4Button_Click" Margin="2,0"/>
                            <controls:Button x:Name="Profile5Button" Text="5" Click="Profile5Button_Click" Margin="2,0"/>
                        </StackPanel>
                    </Grid>


                    <!-- SWAP BIND -->
                    <Grid Margin="0,3,0,3">
                        <Label Content="Swap bind"/>
                        <controls:Button x:Name="SwapBindButton" Text="No keybind" Click="KeybindButtonClick" HorizontalAlignment="Right" />
                    </Grid>

                    <!-- DURATION -->
                    <Grid Height="28">
                        <Label Content="Duration"/>
                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                            <TextBox x:Name="Duration" MaxLength="4" MaxLines="1"
									 TextChanged="Duration_TextChanged"/>
                            <Label Content="ms" FontFamily="{StaticResource Kantumruy}" Padding="6,1,6,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- DELAY -->
                    <Grid Height="28">
                        <Label Content="Delay"/>
                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                            <TextBox x:Name="Delay" MaxLength="4" MaxLines="1"
									 TextChanged="Delay_TextChanged"/>
                            <Label Content="ms" FontFamily="{StaticResource Kantumruy}" Padding="6,1,6,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- PORT SWITCH -->
                    <Grid>
                        <Label Content="Port"/>
                        <controls:Switch x:Name="PortSwitch" OptionA="3074" OptionB="27k" OptionChanged="PortSwitch_Changed"/>
                    </Grid>

                    <Line Margin="5,3" X1="0" X2="270" 
						  StrokeThickness="1" Stroke="{StaticResource InactiveColor}"/>

                    <!-- LOADOUT GRID (2 columns x 6 rows) -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <Grid>
                                <controls:Checkbox x:Name="Loadout1" Click="Loadout1_Click"/>
                                <Label Content="Loadout 1"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout3" Click="Loadout3_Click"/>
                                <Label Content="Loadout 3"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout5" Click="Loadout5_Click"/>
                                <Label Content="Loadout 5"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout7" Click="Loadout7_Click"/>
                                <Label Content="Loadout 7"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout9" Click="Loadout9_Click"/>
                                <Label Content="Loadout 9"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout11" Click="Loadout11_Click"/>
                                <Label Content="Loadout 11"/>
                            </Grid>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <Grid>
                                <controls:Checkbox x:Name="Loadout2" Click="Loadout2_Click"/>
                                <Label Content="Loadout 2"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout4" Click="Loadout4_Click"/>
                                <Label Content="Loadout 4"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout6" Click="Loadout6_Click"/>
                                <Label Content="Loadout 6"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout8" Click="Loadout8_Click"/>
                                <Label Content="Loadout 8"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout10" Click="Loadout10_Click"/>
                                <Label Content="Loadout 10"/>
                            </Grid>
                            <Grid>
                                <controls:Checkbox x:Name="Loadout12" Click="Loadout12_Click"/>
                                <Label Content="Loadout 12"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Line Margin="5,3" X1="0" X2="270" 
						  StrokeThickness="1" Stroke="{StaticResource InactiveColor}"/>

                    <!-- ENDING LOADOUT -->
                    <Grid Height="28">
                        <Label Content="Ending Loadout"/>
                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                            <TextBox x:Name="EndingLoadout" MaxLength="2" MaxLines="1"
									 TextChanged="EndingLoadout_TextChanged" Text="1-12"/>
                            <!--<Label Content="1 - 12" FontFamily="{StaticResource Kantumruy}" Padding="6,1,6,0"/>-->
                        </StackPanel>
                    </Grid>

                    <!-- UNTICK DELAY -->
                    <Grid Height="28">
                        <Label Content="Untick Delay"/>
                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                            <TextBox x:Name="UntickDelay" MaxLength="4" MaxLines="1"
									 TextChanged="UntickDelay_TextChanged"/>
                            <Label Content="ms" FontFamily="{StaticResource Kantumruy}" Padding="6,1,6,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- 3074 DL -->
                    <Grid>
                        <controls:Checkbox x:Name="Packet3074DL" Click="Packet3074DL_Click"/>
                        <Label Content="3074 DL"/>
                    </Grid>

                    <!-- AUTO DISABLE BUFFERING -->
                    <Grid>
                        <controls:Checkbox x:Name="AutoDisableBuffering" Click="AutoDisableBuffering_Click"/>
                        <Label Content="Auto disable buffering"/>
                    </Grid>

                    <!-- CLOSE INVENTORY -->
                    <Grid>
                        <controls:Checkbox x:Name="CloseInventory" Click="CloseInventory_Click"/>
                        <Label Content="Close inventory"/>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid VerticalAlignment="Bottom">
            <Label x:Name="VersionString" HorizontalAlignment="Right" Margin="0,-2.5,0,-10" Foreground="{StaticResource InactiveColor}" Content="made by VermillionOsteichthyes" FontSize="14"/>
            <Label x:Name="TimeString" HorizontalAlignment="Left" Margin="0,-2.5,0,-10" Foreground="{StaticResource InactiveColor}" Content="" FontSize="14"/>
        </Grid>

    </Grid>
</Window>

<UserControl x:Class="vermillion.Controls.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vermillion.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="120"
             x:Name="but">

    <Border x:Name="ButtonBorder" 
            MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseDown="Border_MouseDown" 
            CornerRadius="{Binding CornerRadius}" Background="#200f0f0f" 
            Opacity="0.7">

        <Viewbox HorizontalAlignment="Center">
            <TextBlock x:Name="ButtonText"
                       Margin="14,3"
                       Text="{Binding Text}" 
                       Foreground="{Binding Foreground}" 
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontFamily="Bahnschrift Light" 
                       Opacity="1"/>
        </Viewbox>
        
    </Border>
</UserControl>

<UserControl x:Class="redfish.Controls.FilterCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:redfish.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <Grid>
        <Border x:Name="Border" CornerRadius="{Binding CornerRadius}" BorderThickness="1.7" Opacity="0.7" MouseDown="Border_MouseDown" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave"/>
        <Label x:Name="Label" FontSize="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Empty" IsHitTestVisible="False"/>
        <Path x:Name="Icon" Data="{Binding Geometry}" Fill="White" Margin="10" Stretch="Uniform" IsHitTestVisible="False"/>
    </Grid>
</UserControl>

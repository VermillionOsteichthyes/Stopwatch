    <Grid Margin="20">
        <!--Window controls-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Height="40">
            <controls:WindowControlButton 
                Width="40" Height="40" Scale="0.6" MaxScale="0.65"

<Window x:Class="vermillion.StartupProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vermillion" xmlns:controls="clr-namespace:vermillion.Controls"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource TransparentWindow}">
    
    <Grid Width="330" MinHeight="50">



        <StackPanel>
            <!--Task and close panel-->
            <Grid Height="32"
                        Margin="10,10,10,4" 
                        VerticalAlignment="Top">

                <Path Data="{StaticResource AppIcon}" 
                      Fill="{StaticResource InactiveColor}"
                      Stretch="Uniform"
                      Height="22"
                      Margin="8,0,0,0"
                      HorizontalAlignment="Left"/>

                <!--Task Description-->
                <Label Name="TaskDescription"
                       Content="Initializing..." 
                       Margin="40,0,0,0"
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Width="250" Height="30" Foreground="White" 
                       FontFamily="{StaticResource TitleFont}" FontSize="18"/>

                <controls:WindowControlButton HorizontalAlignment="Right"
                    Height="22" PathData="{StaticResource CloseIcon}" 
                    Click="ExitButtonClick" Scale="0.95" MaxScale="1.0"
                    Margin="0,0,8,0"
                    FillColor="{StaticResource InactiveColor}" GlowColor="#d93732"/>
            </Grid>



            <!--Progress bar-->
            <Border x:Name="ProgressPanel" CornerRadius="6" BorderThickness="1" Visibility="Collapsed"
                    BorderBrush="{StaticResource AccentColor}" 
                    VerticalAlignment="Bottom" Margin="0,0,0,10" Height="40" Width="285">
                <Grid Margin="4">
                    <Border x:Name="Progress" CornerRadius="4"
                            HorizontalAlignment="Left" VerticalAlignment="Top" 
                            Height="30" Width="0" MaxWidth="275" 
                            Background="{StaticResource AccentColor}" BorderBrush="Transparent">
                    </Border>
                </Grid>
            </Border>



            <Border x:Name="LoginBorder" CornerRadius="8" Margin="10,0,10,10" Visibility="Visible"
                    Background="{StaticResource LightBackColor}">

                <Border.LayoutTransform>
                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                </Border.LayoutTransform>
                <Grid Margin="8,6">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="Path">
                                <Setter Property="Fill" Value="{StaticResource InactiveColor}"/>
                                <Setter Property="Stretch" Value="Uniform"/>
                                <Setter Property="Width" Value="18"/>
                                <Setter Property="Margin" Value="4,8,2,1"/>
                            </Style>
                            <Style TargetType="Line">
                                <Setter Property="X1" Value="28"/>
                                <Setter Property="Y1" Value="-3"/>
                                <Setter Property="Y2" Value="-3"/>

                                <Setter Property="Stroke" Value="{StaticResource InactiveColor}"/>
                                <Setter Property="StrokeThickness" Value="1"/>
                                <Setter Property="MinWidth" Value="150"/>
                                <Setter Property="MaxWidth" Value="190"/>
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="MaxWidth" Value="160"/>
                                <Setter Property="MinWidth" Value="70"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{StaticResource TitleColor}"/>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="VerticalAlignment" Value="Bottom"/>
                                <Setter Property="Margin" Value="6,0,0,1"/>
                                <Setter Property="CaretBrush" Value="White"/>
                                <Setter Property="FontFamily" Value="{StaticResource TitleFont}"/>
                            </Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="MaxWidth" Value="160"/>
                                <Setter Property="MinWidth" Value="70"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="{StaticResource TitleColor}"/>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="VerticalAlignment" Value="Bottom"/>
                                <Setter Property="Margin" Value="6,0,0,1"/>
                                <Setter Property="CaretBrush" Value="White"/>
                                <Setter Property="FontFamily" Value="{StaticResource TitleFont}"/>
                            </Style>
                        </StackPanel.Resources>

                        <StackPanel Orientation="Horizontal" Margin="0,-4,0,0" Height="32" x:Name="LoginPanel">
                            <Path Data="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/>
                            <TextBox x:Name="login" Text="Username"/>
                        </StackPanel>

                        <Line X2="{Binding ActualWidth, ElementName=login, Converter={StaticResource Math}, ConverterParameter=x+30}"
                              Visibility="{Binding Visibility, ElementName=LoginPanel}"/>

                        <StackPanel Orientation="Horizontal" Height="32" x:Name="PassPanel">
                            <Path Data="M144 144v48H304V144c0-44.2-35.8-80-80-80s-80 35.8-80 80zM80 192V144C80 64.5 144.5 0 224 0s144 64.5 144 144v48h16c35.3 0 64 28.7 64 64V448c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V256c0-35.3 28.7-64 64-64H80z"/>
                            <Grid>
                                <TextBox x:Name="passwordWatermark" Text="Password" Opacity="0.5" IsHitTestVisible="False"/>
                                <PasswordBox x:Name="password" Password=""/>
                            </Grid>
                        </StackPanel>

                        <Line X2="{Binding ActualWidth, ElementName=password, Converter={StaticResource Math}, ConverterParameter=x+30}"
                              Visibility="{Binding Visibility, ElementName=PassPanel}"/>

                        <StackPanel Orientation="Horizontal" Height="32" x:Name="KeyPanel" Visibility="Collapsed">
                            <Path Data="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17v80c0 13.3 10.7 24 24 24h80c13.3 0 24-10.7 24-24V448h40c13.3 0 24-10.7 24-24V384h40c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z"/>
                            <Grid>
                                <TextBox x:Name="keyWatermark" Text="Licence key" Opacity="0.5"/>
                                <PasswordBox x:Name="key" Password=""/>
                            </Grid>
                        </StackPanel>

                        <Line X2="{Binding ActualWidth, ElementName=key, Converter={StaticResource Math}, ConverterParameter=x+30}"
                              Visibility="{Binding Visibility, ElementName=KeyPanel}"/>

                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="controls:Button">
                                <Setter Property="Height" Value="26"/>
                            </Style>
                        </StackPanel.Resources>

                        <controls:Button x:Name="LoginButton" Text="  Login  " Click="LoginClick" CornerRadius="6" Margin="0,2,0,0" VerticalAlignment="Top"/>

                        <controls:Button x:Name="RegisterButton" Text="Register" Click="RegisterClick" CornerRadius="6" Margin="0,5,0,0"/>

                        <controls:Button x:Name="RedeemButton" Text="Redeem" Click="RedeemClick" CornerRadius="6" Margin="0,5,0,0" Visibility="Collapsed" VerticalAlignment="Bottom"/>
                    
                    </StackPanel>
                </Grid>

                
            </Border>
        </StackPanel>
    </Grid>
</Window>
